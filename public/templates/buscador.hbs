{{#if productos.length }}
    {{#each productos}}
        <a href="#" class="card" >
            <article class="card__article">
                <div class="card__image-container">
                    <img class="card__image" src="../{{foto}}" alt="{{nombre}}"/>
                </div>
                <div class="card__content">
                    <h2 class="card__heading">{{nombre}}</h2>
                    <div class="card__description">
                        <p> {{detalles}}</p>
                        <p>${{precio}}</p>
                    </div>
                </div>
            </article>
            <button class="btn agregar-carrito" onclick="agregarCarrito(event,'{{_id}}', this)">Agregar al carrito</button>
        </a>
    {{/each}}
{{else}}
    <h2>No se encontraron productos buscados</h2>
{{/if}}